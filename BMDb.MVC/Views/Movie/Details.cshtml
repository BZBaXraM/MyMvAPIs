@model BMDb.MVC.Models.MovieViewModel?

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model!.Poster" class="img-fluid" alt="Responsive image">
        </div>
        <div class="col-md-8 justify-content-center">
            <h3>@Model!.Title</h3>
            <p>@Model!.Plot</p>
            @if (Model!.Trailer != null)
            {
                <video width="720" height="480" controls="controls">
                    <source src="@Model!.Trailer" type="video/mp4"/>
                </video>
            }
        </div>

    </div>
</div>


<br/>
<br/>
<a class="btn btn-outline-primary" href="@Url.Action("Index", "Movie")">Back to movie list</a>